<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout_left_bar"
        android:layout_width="@dimen/leftbar_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="@dimen/left_bar_elevation"
        android:background="@color/left_bar_background">

    <!-- UDW left list -->
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_leftbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/udw_list_margin"
            android:layout_gravity="center_horizontal"
            android:fadeScrollbars="true"
            android:background="@android:color/transparent"/>

</LinearLayout>