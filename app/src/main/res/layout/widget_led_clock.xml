<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:keepScreenOn="true">

    <com.cnh.android.eaglenext.widget.LedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="88:88:88"
            android:textColor="#aaDADADA"
            android:textSize="@dimen/time_text_size"/>

    <com.cnh.android.eaglenext.widget.LedTextView
            android:id="@+id/tv_clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:shadowRadius="@integer/time_light_strength"
            android:shadowDx="@integer/time_light_strength"
            android:shadowDy="@integer/time_light_strength"
            android:shadowColor="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/time_text_size"/>

</FrameLayout>