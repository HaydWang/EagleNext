<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/view_holder_single_udw"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/udw_height"
              android:layout_marginTop="@dimen/udw_margin"
              android:layout_marginBottom="@dimen/udw_margin"
              android:gravity="center_vertical"
              android:elevation="4dp"
              android:background="@drawable/background_corner_card">

    <ImageView
            android:id="@+id/udw_icon"
            android:layout_width="@dimen/udw_icon_width"
            android:layout_height="@dimen/udw_icon_height"
            android:layout_marginLeft="@dimen/udw_icon_margin"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/udw_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/udw_icon_margin"
                android:textSize="@dimen/udw_caption_text_size"
                android:textStyle="bold"
                android:textColor="#222222"/>

        <TextView
                android:id="@+id/udw_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/udw_icon_margin"
                android:textSize="@dimen/udw_description_text_size"
                android:textStyle="bold"
                android:textColor="#000000"/>
    </LinearLayout>


    <android.support.v7.widget.SwitchCompat
            android:id="@+id/udw_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/udw_icon_margin"
            android:layout_marginRight="@dimen/udw_icon_margin"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:scaleX="@dimen/udw_switch_scale"
            android:scaleY="@dimen/udw_switch_scale"
            android:textSize="@dimen/udw_switch_text_size"
            android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/udw_button"
        android:layout_width="@dimen/udw_button_width"
        android:layout_height="@dimen/udw_button_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/udw_button_margin"
        android:layout_marginRight="@dimen/udw_icon_margin"
        android:layout_margin="@dimen/udw_icon_margin"
        android:src="@drawable/ic_sync_white_48dp"
        android:scaleType="centerCrop"
        android:background="@drawable/background_corner_button_blue"
        android:visibility="gone"/>

</LinearLayout>